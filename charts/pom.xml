<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.panowek</groupId>
    <artifactId>charts</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <dependencies>
        <dependency>
            <groupId>javax</groupId>
            <artifactId>javaee-api</artifactId>
            <version>7.0</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <failOnMissingWebXml>false</failOnMissingWebXml>
        <org.codehaus.cargo.version>1.6.0</org.codehaus.cargo.version>
    </properties>

    <build>
        <finalName>charts</finalName>

        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.cargo</groupId>
                    <artifactId>cargo-maven2-plugin</artifactId>
                    <version>${org.codehaus.cargo.version}</version>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>org.codehaus.cargo</groupId>
                <artifactId>cargo-maven2-plugin</artifactId>
                <inherited>false</inherited>
                <configuration>
                    <configuration>
                        <properties>
                            <cargo.servlet.port>7002</cargo.servlet.port>
                            <cargo.jvmargs>-Xmx256m</cargo.jvmargs>
                            <cargo.jboss.ajp.port>8010</cargo.jboss.ajp.port>
                            <cargo.jboss.management-http.port>9999</cargo.jboss.management-http.port>
                            <cargo.start.jvmargs>-Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=9006</cargo.start.jvmargs>
                            <cargo.servlet.users>advisor1:passw0rd:advisor|customer1:passw0rd:</cargo.servlet.users>
                        </properties>
                    </configuration>

                    <deployables>
                        <deployable>
                            <location>chart-services/target/charts.war</location>
                            <type>war</type>
                            <properties>
                                <context>/charts</context>
                            </properties>
                        </deployable>
                    </deployables>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-deploy-plugin</artifactId>
                <inherited>false</inherited>
                <configuration>
                    <skip>false</skip>
                </configuration>
            </plugin>

        </plugins>

    </build>


    <profiles>
        <profile>
            <id>wildfly</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.cargo</groupId>
                        <artifactId>cargo-maven2-plugin</artifactId>
                        <configuration>
                            <container>
                                <containerId>wildfly10x</containerId>
                                <home>${WILDFLY_HOME}</home>
                            </container>
                            <configuration>
                                <configfiles>
                                    <configfile>
                                        <file>${project.basedir}/src/test/wildfly/standalone.xml</file>
                                        <todir>/configuration</todir>
                                    </configfile>
                                </configfiles>
                            </configuration>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <modules>
        <module>chart</module>
        <module>chart-services</module>
    </modules>

</project>